{
  "name": "@your-org/angular-login-component",
  "version": "1.0.0",
  "description": "Componente Angular riutilizzabile per il login con integrazione backend configurabile",
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo",
    "build": "ng build angular-login-component",
    "build:watch": "ng build angular-login-component --watch",
    "build:prod": "ng build angular-login-component --configuration production",
    "pack": "npm pack dist/angular-login-component",
    "test": "ng test angular-login-component",
    "test:watch": "ng test angular-login-component --watch",
    "lint": "ng lint angular-login-component",
    "demo:serve": "ng serve demo",
    "demo:build": "ng build demo",
    "demo:build:prod": "ng build demo --configuration production",
    "dev": "concurrently \"npm run build:watch\" \"npm start\"",
    "publish:local": "npm run build:prod && npm pack dist/angular-login-component",
    "clean": "rimraf dist node_modules/.cache"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "keywords": [
    "angular",
    "login",
    "component",
    "authentication",
    "reusable"
  ],
  "author": "Davide Lodde",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davideloddeDev/angular-login.git"
  },
  "bugs": {
    "url": "https://github.com/davideloddeDev/angular-login/issues"
  },
  "homepage": "https://github.com/davideloddeDev/angular-login#readme",
  "main": "dist/angular-login-component/index.js",
  "types": "dist/angular-login-component/index.d.ts",
  "private": false,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.4",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.0",
    "typescript": "~5.8.2"
  },
  "peerDependencies": {
    "@angular/common": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0"
  }
}

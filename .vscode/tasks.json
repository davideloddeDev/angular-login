  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "label": "npm: start",
      "detail": "ng serve demo",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Local:|bundle generation complete"
          }
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "build",
      "label": "npm: build",
      "detail": "ng build angular-login-component",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "npm",
      "script": "build:watch",
      "label": "npm: build:watch",
      "detail": "ng build angular-login-component --watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Watch mode enabled"
          },
          "endsPattern": {
            "regexp": "Build complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "label": "npm: test",
      "detail": "ng test angular-login-component",
      "isBackground": true,
      "group": "test",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "pack",
      "label": "npm: pack",
      "detail": "npm pack dist/angular-login-component",
      "group": "build",
      "dependsOn": "npm: build"
    }
  ]
}
